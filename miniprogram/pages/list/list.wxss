.head {
  padding: 10rpx 20rpx;
  background: #52495b;
  color: #ffffff;
  font-size: 24rpx;
  font-weight: 400;
}
.head > view {
  padding: 5rpx 0;
}
.head > view:nth-child(2) {
  font-size: 34rpx;
  font-weight: 700;
}
.head > .info {
  display: flex;
  justify-content: center;
  align-items: center;
  color: #bfc2c7;
}
.head > .info > image {
  width: 40rpx;
  height: 40rpx;
  border-radius: 100%;
}
.head > .info > text,
.head > .info > image {
  margin-right: 20rpx;
}
.head > .info > text:last-child {
  margin-right: 0;
}
.head > .touch {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}
.head > .touch > .subbtn {
  padding: 10rpx 20rpx;
  background: #25c587;
  color: #ffffff;
  border-radius: 10rpx;
}
.item {
  padding: 20rpx;
  margin: 5rpx 0;
  background: #ffffff;
}
.item > view:nth-child(1) {
  display: flex;
  margin-bottom: 10rpx;
}
.item > view:nth-child(1) > view:nth-child(1) {
  flex: 1;
}
.item > view:nth-child(1) > view:nth-child(2) {
  width: 200rpx;
  text-align: right;
  color: #25c587;
}
.item > view:nth-child(2) {
  font-size: 25rpx;
  color: #bfc2c7;
  margin-bottom: 10rpx;
}
.item > view:nth-child(3) {
  font-size: 25rpx;
  color: #bfc2c7;
}
