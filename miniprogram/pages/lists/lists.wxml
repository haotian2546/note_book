<!-- pages/note_books/note_books.wxml -->
<wxs module="filter" src="../../utils/utils.wxs"></wxs>
<nav-bar show_addlists="true" show_back="{{false}}"></nav-bar>
<view class="header">如果你真的愿意去努力，那么你人生最坏的结果，也不过是大器晚成。</view>
<view wx:if="{{!list.length}}" class="logo_loading iconfont  icon-hua"></view>
<view>
  <navigator url="{{'/pages/list/list?id='+item._id}}" wx:for="{{list}}" wx:key="index" class="item">
    <view>{{item.title}}</view>
    <view class="lue">{{item.des}}</view>
    <view>
      <view>
        <text>{{filter.allTime(item.create_time)}}</text>
        <text>{{item.author.nickName}}</text>
        <text wx:if="{{item.click}}">{{item.click}}</text>
      </view>
      <view>{{item.count}} 条流水</view>
    </view>
  </navigator>
  <view class="nothing">{{nothing?'—— 没有东西了 ——':''}}</view>
</view>