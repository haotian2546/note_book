.nav_node_book_add {
  position: fixed;
  right: 60rpx;
  bottom: 60rpx;
  color: #52495b;
  font-size: 80rpx;
}
.item {
  padding: 20rpx;
  margin: 20rpx;
  background: #ffffff;
  border-radius: 10rpx;
  box-shadow: 3px 4px 12px 0 rgba(0, 0, 0, 0.1);
}
.item > view:nth-child(1) {
  font-size: 30rpx;
  margin-bottom: 5rpx;
}
.item > view:nth-child(2) {
  font-size: 25rpx;
  color: #bfc2c7;
  margin-bottom: 5rpx;
}
.item > view:nth-child(3) {
  font-size: 25rpx;
  color: #bfc2c7;
  display: flex;
  justify-content: space-between;
}
.item > view:nth-child(3) > view:nth-child(2) {
  color: #25c587;
}
.header {
  background: #52495b;
  color: #f6f6f6;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20rpx 20rpx;
}
.header > view:nth-child(1) {
  flex: 1;
}
.header > view:nth-child(2) {
  width: 70rpx;
  text-align: center;
  font-size: 60rpx;
  margin-left: 50rpx;
}
