<wxs module="filter" src="../../utils/utils.wxs"></wxs>
<view class="user" wx:if="{{userInfo}}">
  <view class="user-avatar" style="background-image:url({{userInfo.avatarUrl}});"></view>
  <view class="user-info">
    <text>{{userInfo.nickName}}</text>
    <text>注册于{{filter.time(userInfo.create_time)}}</text>
  </view>
</view>
<view class="count">
  收入
  <view style="color:#12d58b">{{count.income_num}}</view>
  笔共
  <view style="color:#12d58b">{{count.income}}</view>
  元
</view>
<view class="count">
  支出
  <view style="color:red">{{count.expend_num}}</view>
  笔共
  <view style="color:red">{{count.expend}}</view>
  元
</view>
<view class="count">
  {{(count.income-count.expend)>0?'结余':'负债'}}
  <view style="color:{{(count.income-count.expend)>0?'#12d58b':'red'}}">
    {{(count.income-count.expend)>0?(count.income-count.expend):(count.income-count.expend)*-1}}
  </view>块
</view>
