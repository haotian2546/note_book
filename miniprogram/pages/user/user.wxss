.user {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 30rpx;
  background: #52495b;
  color: #ffffff;
  padding-top: 0;
}
.user .user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 100%;
  background-size: cover;
  margin-right: 40rpx;
  background-color: #ffffff;
}
.user .user-info {
  font-size: 40rpx;
}
.count {
  background: #ffffff;
  padding: 30rpx 20rpx;
  margin: 20rpx 0;
  display: flex;
  border-radius: 10rpx;
}
.count > view {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}
.count > view > view:nth-child(1) {
  color: #999999;
}
.count > view > view:nth-child(2) {
  color: #52495b;
  font-size: 50rpx;
  padding-top: 20rpx;
}
.count > view:nth-child(2) {
  border-left: 1rpx solid #999999;
  border-right: 1rpx solid #999999;
}
.list .list-item {
  display: flex;
  align-items: center;
  height: 100rpx;
  padding: 0 20rpx;
  background: #ffffff;
  margin-bottom: 10rpx;
}
.list .list-item i:nth-child(1) {
  margin-right: 20rpx;
  font-size: 43rpx;
}
.list .list-item text:nth-child(2) {
  flex: 1;
  text-align: left;
  font-size: 30rpx;
}
.list .list-item .round {
  color: red;
  padding-right: 20rpx;
}
.list > button {
  display: flex;
  align-items: center;
  background: #ffffff;
  border-radius: 0;
  border: 0;
}
.list > button::after {
  border: none;
  border-radius: 0;
}
